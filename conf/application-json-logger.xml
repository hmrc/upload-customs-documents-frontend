<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="uk.gov.hmrc.uploaddocuments.wiring.JsonEncoder"/>
    </appender>

    <logger name="uk.gov" level="WARN"/>
    <logger name="uk.gov.hmrc.http" level="ERROR"/>
    <logger name="uk.gov.hmrc.play" level="INFO"/>
    <logger name="uk.gov.hmrc.uploaddocuments" level="WARN"/>
    <logger name="uk.gov.hmrc.uploaddocuments.controllers" level="INFO"/>
    <logger name="uk.gov.hmrc.uploaddocuments.controllers.internal.UploadFileController" level="DEBUG"/>

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
